@RestController
@RequestMapping("/api/ifi")
@RequiredArgsConstructor
public class IfiController {

    private final IfiSimulationService service;
    private final IfiMapper mapper;

    @PostMapping("/simulate")
    public IfiSimulationResponseDto simulate(
            @RequestBody IfiSimulationRequestDto request) {

        var domainInput = mapper.toDomain(request);
        var result = service.simulate(domainInput);

        return mapper.toDto(result);
    }
}
