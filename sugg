package com.bnpparibas.dsibddf.a100919.fis.exposition.api.pvi.exception;

import lombok.Getter;

@Getter
public class PviValidationException extends RuntimeException {

    private final String field;
    private final String code;

    public PviValidationException(String field, String message) {
        this(field, "PVI-400-VALIDATION", message);
    }

    public PviValidationException(String field, String code, String message) {
        super(message);
        this.field = field;
        this.code = code;
    }
}
